<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="@dimen/card_main_width"
    android:layout_height="@dimen/card_main_height"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginStart="@dimen/vertical_spacing"
    android:layout_marginTop="@dimen/horizontal_spacing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image_view_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_image_height"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/product_text_view_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/vertical_spacing"
            android:paddingEnd="@dimen/vertical_spacing"
            android:gravity="start"
            android:text="@string/default_home_card_name"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/price_text_view_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/vertical_spacing"
            android:paddingEnd="@dimen/vertical_spacing"
            android:gravity="start"
            android:text="@string/default_home_card_price"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>
</androidx.cardview.widget.CardView>